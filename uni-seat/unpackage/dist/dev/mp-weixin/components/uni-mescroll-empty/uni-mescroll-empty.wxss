.mescroll-empty {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
  align-self: center;
  height: 100%;
  width: 100%;
}
.mescroll-empty .content {
  align-items: center;
  margin-bottom: 60px;
}
.mescroll-empty .content .empty-icon {
  width: 140px;
  height: 140px;
}
.mescroll-empty .content .empty-btn {
  display: flex;
  width: 90px;
  height: 34px;
  justify-content: center;
  align-items: center;
  color: #0099FF;
  border: 1px solid #0099FF;
  border-radius: 4px;
}

