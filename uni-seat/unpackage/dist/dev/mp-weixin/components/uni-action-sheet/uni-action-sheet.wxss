 .uni-scroll-view::-webkit-scrollbar {
  display: none;
}
.action-sheet {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
}
.action-sheet .content-view {
  width: 100%;
  color: #141D28;
  font-size: 16px;
  background-color: #F6F6F6;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
}
.action-sheet .content-view .top-view {
  display: flex;
  flex-direction: column;
  background-color: #FFF;
  border-radius: 16px;
}
.action-sheet .content-view .list-view {
  max-height: 305px;
  overflow: hidden;
  background-color: #FFF;
}
.action-sheet .content-view .top-title-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  color: #959AA0;
  font-size: 14px;
}
.action-sheet .content-view .pop-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  border-top: 1px solid #F6F6F6;
}
.action-sheet .content-view .pop-cell.active {
  color: #0099FF;
}
.action-sheet .content-view .pop-cell.bottom-cancel-view {
  margin-top: 10px;
  background-color: #FFF;
}

