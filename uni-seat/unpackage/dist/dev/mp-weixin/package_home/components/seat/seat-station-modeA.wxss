.station-seat {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.station-seat .seat-head-hint {
  width: 100%;
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 12px;
  justify-content: center;
}
.station-seat .seat-head-hint .sign {
  width: 14px;
  height: 14px;
  border-radius: 2px;
  margin-left: 20px;
  margin-right: 4px;
}
.station-seat .seat-head-hint .sign.hint-able {
  border: 1px solid #DADEE6;
}
.station-seat .seat-head-hint .sign.hint-reserve {
  border: 1px solid #E29494;
  background-color: #FFF0F0;
}
.station-seat .seat-head-hint .sign.hint-enable {
  border: 1px solid #DADEE6;
  background-color: #F2F4F7;
}
.station-seat .seat-main {
  width: 100%;
  flex: 1;
  position: relative;
}
.station-seat .seat-main .vm-area {
  width: 200%;
  height: 100%;
  position: absolute !important;
  overflow: auto;
  top: 0;
  left: 0;
}
.station-seat .seat-out {
  width: 750rpx;
  justify-content: space-around;
}
.station-seat .seat-foot {
  margin-top: 20px;
}
.out-text {
  color: #C7CCD6;
  font-size: 14px;
  margin-bottom: 20px;
  margin-top: 20px;
}
.out-text.window {
  margin-top: 0;
}
.main-content {
  align-items: flex-start;
  flex: 1;
  margin-left: 20px;
}
.content-left {
  border: 2px solid #DADEE6;
  border-right: none;
  padding: 20px 30px;
}
.content-left .group-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20px;
}
.content-right {
  width: 400px;
  margin-top: 34px;
}
.content-right .bottom {
  width: 2px;
  background-color: #DADEE6;
  height: 160px;
}
.content-right .top {
  align-items: flex-start;
  border: 2px solid #DADEE6;
  border-left: none;
  border-right: none;
}
.content-right .top .wall-door {
  flex: 1;
}
.content-right .top .wall-door .wall-list {
  align-items: flex-start;
}
.content-right .top .wall {
  border: 2px solid #DADEE6;
  border-top: none;
  background: linear-gradient(45deg, #FFF 25%, #F2F4F7 0, #F2F4F7 50%, #FFF 0%, #FFF 75%, #F2F4F7 0);
  background-size: 8px 8px;
}
.content-right .top .wall.wall-A {
  width: 28px;
  height: 200px;
  border-bottom-right-radius: 14px;
  border-bottom-left-radius: 14px;
}
.content-right .top .wall.wall-B {
  width: 100px;
  height: 100px;
  border-bottom-right-radius: 4px;
  border-bottom-left-radius: 4px;
  border-left: none;
}
.content-right .top .wall.wall-C {
  width: 200px;
  height: 50px;
  border-bottom-right-radius: 4px;
  border-bottom-left-radius: 4px;
  border-left: none;
}
.content-right .top .group {
  margin: 40px 20px;
}
.right-door {
  height: 346px;
  position: relative;
}
.right-door .top {
  margin-top: 34px;
  width: 2px;
  background-color: #DADEE6;
  flex: 1;
}
.right-door .bottom {
  width: 2px;
  background-color: #DADEE6;
  flex: 1;
}
.right-door .door {
  position: absolute;
  top: 151px;
  left: 21px;
  height: 60px;
  width: 2px;
  background-color: #DADEE6;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
}
.right-door .in {
  position: absolute;
  color: #DADEE6;
  font-size: 14px;
  top: 170px;
}

