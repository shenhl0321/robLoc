.top-view {
  display: flex;
  position: relative;
  width: 100%;
  height: calc(192px + 64px + 25px);
}
.top-view .nav-bar {
  display: flex;
  width: 100%;
  z-index: 999;
  justify-content: center;
  height: calc(64px + 25px);
}
.top-view .nav-bar .title {
  margin-top: calc(25px + 34px);
}
.top-view .bg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.top-view .user {
  display: flex;
  flex: 1;
  z-index: 999;
  align-items: center;
  justify-content: center;
  padding: 0 14px;
}
.top-view .user .content {
  position: relative;
  box-sizing: border-box;
  height: 150px;
  width: 100%;
  background: linear-gradient(to right, #2AACDC, #003E76);
  border-radius: 16px;
  color: #FFF;
  align-items: center;
}
.top-view .user .content .user-header {
  width: 44px;
  height: 44px;
  border-radius: 22px;
  margin-top: 28px;
}
.top-view .user .content .user-name {
  margin-top: 20px;
  font-size: 18px;
  font-weight: 500;
}
.top-view .user .content .mobile {
  margin-top: 6px;
  font-size: 14px;
}
.top-view .user .content .set {
  position: absolute;
  width: 18px;
  height: 18px;
  top: 20px;
  right: 20px;
}
.section-list {
  width: 100%;
  flex: 1;
  justify-content: space-between;
}
.section-list .my-section {
  width: calc(100% - 40px);
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 20px;
  border-radius: 10px;
  background-color: #FFF;
  padding: 20px;
  justify-content: space-between;
}
.section-list .my-section .icon {
  width: 44px;
  height: 44px;
}
.section-list .my-section .name {
  font-size: 16px;
  color: #141D28;
  margin-left: 12px;
}
.section-list .my-section .small_push {
  width: 16px;
  height: 16px;
}
.section-list .exit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(100% - 40px);
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 20px;
  border-radius: 10px;
  background-color: #FFF !important;
  height: 50px;
  color: #E94F57;
  font-size: 16px;
}

